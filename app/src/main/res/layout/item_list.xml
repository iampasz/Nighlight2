<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/showAdd"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_5"
    app:cardBackgroundColor="@color/cardBackground"
    card_view:cardCornerRadius="@dimen/corner_radius"
    card_view:cardElevation="@dimen/card_elevation"
    card_view:cardMaxElevation="@dimen/card_elevation"
    tools:layout_editor_absoluteX="@dimen/layout_editor"
    tools:layout_editor_absoluteY="@dimen/layout_editor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/size_50"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_5"
            android:contentDescription="@string/image_des"
            app:srcCompat="@drawable/play" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5"
                android:text="Отключить рекламу"
                android:textColor="@color/greenText"
                android:textSize="@dimen/text_size_20" />

            <TextView
                android:id="@+id/author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5"
                android:text="После просмотра рекламы с вознаграждением реклама будет отключена две сесии"
                android:textColor="@color/greenText"
                android:textSize="@dimen/text_size_15" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>

